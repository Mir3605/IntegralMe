<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <katex.hourglass.in.mathlib.MathView
        android:id="@+id/ProblemInProblems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:setTextColor="@color/white"
        app:setTextSize="@dimen/math_text_size_lvl" />

    <TextView
        android:id="@+id/TriesInProblems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/TimeInProblems"
        app:layout_constraintStart_toEndOf="@+id/ProblemInProblems"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TimeInProblems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>